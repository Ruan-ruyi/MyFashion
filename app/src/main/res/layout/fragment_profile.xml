<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView android:text="偏好设置" android:textSize="24sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:text="选择您的性别偏好，我们将为您推荐相关穿搭：" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <RadioGroup android:id="@+id/rg_gender" android:layout_marginTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rb_female" android:text="女装 (Female)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/rb_male" android:text="男装 (Male)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RadioGroup>
</LinearLayout>