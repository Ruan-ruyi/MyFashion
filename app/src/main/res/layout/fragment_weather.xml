<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <TextView android:id="@+id/tv_city" android:textSize="32sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="City"/>
    <TextView android:id="@+id/tv_temp" android:textSize="24sp" android:layout_margin="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Temp"/>
    <Button android:id="@+id/btn_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="切换城市"/>
</LinearLayout>